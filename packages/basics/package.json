{
  "name": "@itr-components/basics",
  "version": "0.0.1",
  "description": "A package with the basic component elements for a site.",
  "main": "build/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "webpack -p && npm run copy-styles",
    "copy-styles": "cp ./node_modules/react-select/dist/react-select.min.css ./build/react-select.min.css",
    "dev": "webpack --progress --colors --watch",
    "dev:nowatch": "webpack --progress --colors",
    "prepublish": "npm run build",
    "test": "jest --colors --verbose --coverage",
    "semantic-release": "semantic-release"
  },
  "repository": "https://github.com/itreverie/itr-components-library",
  "keywords": [
    "react",
    "reusable",
    "components"
  ],
  "author": "Brenda Jimenez",
  "license": "MIT",
  "dependencies": {
    "prop-types": "^15.5.10",
    "react-select": "^1.0.0-rc.5"
  },
  "devDependencies": {
    "aphrodite": "^1.2.0",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-inline-react-svg": "^0.4.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-preset-airbnb": "^2.2.3",
    "css-loader": "^0.28.4",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "jest": "^20.0.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "semantic-release": "^15.9.8",
    "style-loader": "^0.18.2",
    "webpack": "^2.4.1"
  },
  "peerDependencies": {
    "aphrodite": "^1.2.0",
    "react": "^15.0.0-0 || ^16.0.0-0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/shim.js",
      "<rootDir>/test/setup.js"
    ],
    "setupTestFrameworkScriptFile": "./test/testsSetup.js"
  }
}
